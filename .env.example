# Backend configuration
DATABASE_URL=postgresql://user:password@localhost:5432/data_mapper
DEBUG=True
DATE_DEFAULT_DAYFIRST=False
LOG_LEVEL=INFO
MAP_STAGE_TIMEOUT_SECONDS=600
UPLOAD_MAX_FILE_SIZE_MB=100
B2_MAX_RETRIES=3
SECRET_KEY=change-me

# CORS / frontend access
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Admin bootstrap (optional)
# Set these in production to auto-create the first admin on startup
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=

# Backblaze B2 credentials
B2_APPLICATION_KEY_ID=
B2_APPLICATION_KEY=
B2_BUCKET_NAME=

# LLM integrations
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Frontend runtime config
# Used by Vite dev/build and write-runtime-env script
API_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000
VITE_MAX_UPLOAD_SIZE_MB=100

# Optional: skip DB init in certain scripts/tests (0 or 1)
SKIP_DB_INIT=0
