# Backend configuration
DATABASE_URL=postgresql://user:password@localhost:5432/content_atlas
DEBUG=True
DATE_DEFAULT_DAYFIRST=False
LOG_LEVEL=INFO
MAP_STAGE_TIMEOUT_SECONDS=600
MAP_PARALLEL_MAX_WORKERS=4
UPLOAD_MAX_FILE_SIZE_MB=100
SECRET_KEY=change-me

# CORS / frontend access
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Admin bootstrap (optional)
# Set these in production to auto-create the first admin on startup
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=

# S3-Compatible Storage Configuration
# Supports: Backblaze B2, AWS S3, MinIO, Wasabi, DigitalOcean Spaces, etc.
STORAGE_PROVIDER=b2
STORAGE_ENDPOINT_URL=https://s3.us-west-004.backblazeb2.com
STORAGE_ACCESS_KEY_ID=
STORAGE_SECRET_ACCESS_KEY=
STORAGE_BUCKET_NAME=
STORAGE_REGION=us-west-004

# LLM integrations
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Query settings (natural language agent)
QUERY_ROW_LIMIT=2500
QUERY_TIMEOUT_SECONDS=60

# Export settings (large file downloads via /api/export/query)
EXPORT_ROW_LIMIT=100000
EXPORT_TIMEOUT_SECONDS=120

# Frontend runtime config
# Used by Vite dev/build and write-runtime-env script
API_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000
VITE_MAX_UPLOAD_SIZE_MB=100

# Optional: skip DB init in certain scripts/tests (0 or 1)
SKIP_DB_INIT=0
